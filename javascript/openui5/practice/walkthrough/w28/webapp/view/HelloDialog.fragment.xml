<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
    <Dialog
        id="helloDialog"
        title="hello {/recipient/name}"
        >
    <content>
        <core:Icon src="sap-icon://hello-world" size="8em" class="sapUiMediumMargin" />
    </content>
    <beginButton>
        <Button text="{i18n>dialogCloseButtonText}" press=".onCloseDialog" />
    </beginButton>
    </Dialog>
</core:FragmentDefinition>